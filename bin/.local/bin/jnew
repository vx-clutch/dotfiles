me=$0
scriptversion="1.0.0"

version="$me $scriptversion

Copyright (C) 2025 VX.

This is free software; you are free to change and redistribute it.
There is NO WARRANTY, to the extent permitted by law."

usage="\
Usage: $me [project] [OPTION]...
Generate a java project

Options:
   --class    generate a class only file

   --help     print this help and exit
   --version  output version information"

classonly=false
classname=

while [ $# -gt 0 ]; do
    case $1 in
        --help)
            echo "$usage"
            exit 0
            ;;
        --version)
            echo "$version"
            exit 0
            ;;
        --class)
            classonly=true
            ;;
        -*)
            echo "$me: unknown option '$1'" >&2
            echo "Try '$me --help' for more information." >&2
            exit 1
            ;;
        *)
            classname=$1
            ;;
    esac
    shift
done

if [ -z "$classname" ]; then
    echo "$me: missing project name" >&2
    echo "Try '$me --help' for more information." >&2
    exit 1
fi

firstchar=$(printf '%s' "$classname" | cut -c1 | tr '[:lower:]' '[:upper:]')
restchars=$(printf '%s' "$classname" | cut -c2-)
classname="${firstchar}${restchars}"

file="${classname}.java"

if [ -e "$file" ]; then
    echo "$me: file '$file' already exists" >&2
    exit 1
fi

cat <<EOF >"$file"
/*
 * Short description
 *
 * Author: Owen Westness <vx-clutch>
 * Date: $(date +"%B %d, %Y")
 * License: MIT
 */

public class $classname {
EOF

if $classonly; then
    cat <<EOF >>"$file"
	public $classname() {
		// Your code here...
	}
EOF
else
    cat <<EOF >>"$file"
	public static void main(String[] args) {
		// Your code here...
	}
EOF
fi

printf '}\n' >>"$file"

echo "Created $file"

# End: jnew
